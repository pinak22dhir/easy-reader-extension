{
    "manifest_version": 3,
    "name": "Easy Paper Reader",
    "description": "Read papers without having to open multiple tabs",
    "version": "2.0",
    "content_scripts": [
        {
            "matches": ["*://*.nature.com/*", "*://*.science.org/*"],
            "js": ["handleSelection.js", "content.js", "showFig.js", "nature/NatureScrapeImageUrl.js", "showMethods.js", "findSimilarMethods.js", "showRef.js", "getCrossRef.js", "scrapePubmed.js", "science/ScienceScrapeImageUrl.js"]
        }
    ]
}
